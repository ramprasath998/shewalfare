<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.beebox.blood.shewalfare.Complete_request">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:bootstrapHeading="h5"
        android:id="@+id/name2"
        android:textColor="@color/white"
        android:maxLength="5"
        android:textStyle="bold"
        android:hint="Name"
         />


    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Blood "
        android:id="@+id/blood2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"

        />



    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Unit "
        android:id="@+id/unit2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"


        />




    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Date   "
        android:id="@+id/date2"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"


        />


    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purpose2"
        android:hint="Purpose"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"

        android:inputType="textPersonName"
        android:maxLines="1"

        />


    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/room2"
        android:hint="Room no"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"

        />


    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Attendar Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/attendarname2"
        android:textStyle="bold"

        android:inputType="textPersonName"
        android:maxLines="1"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"

        />






    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Attendar Phone"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/attendarphone2"
        android:textStyle="bold"

        android:inputType="textPersonName"
        android:maxLines="1"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        />




    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hospitalname2"
        android:hint="Hospital Name"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"

        />


    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hospitalplace2"
        android:hint="Hospital Location"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"


        />






    <com.beardedhen.androidbootstrap.BootstrapEditText


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Donor's name"
        android:textSize="20sp"
        android:id="@+id/assigndonor"
        app:bootstrapSize="lg"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:inputType="textPersonName"
        app:roundedCorners="true"

        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assigndonorphone"
        android:hint="Donor's phone"
        android:layout_marginTop="10dp"
        app:bootstrapSize="lg"
        android:inputType="phone"
        android:maxLines="1"
        app:roundedCorners="true"
        android:maxLength="10"
        />



    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/confirmrelate">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Confirm "
            android:id="@+id/confirmreg"
            android:layout_gravity="center"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            android:layout_margin="2dp"
            android:layout_alignParentBottom="true"
            app:roundedCorners="true"
            />

    </RelativeLayout>
</LinearLayout>
