<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    tools:context="com.beebox.blood.shewalfare.Call">




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.75"
    android:padding="10dp"
    android:background="#CF000F"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="Donor Details"
        android:textColor="#fff"
        android:inputType="textCapSentences"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displaytext"
        android:textSize="30sp"
        android:textColor="#fff"
       android:layout_below="@+id/heading"
        android:inputType="textCapSentences"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:inputType="textCapSentences"
        android:layout_below="@+id/displaytext"
        android:id="@+id/displayphone"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displaycity"
        android:layout_below="@+id/displayphone"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:inputType="textCapSentences"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayblood"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:inputType="textCapSentences"
        android:textColor="#fff"
        android:layout_below="@+id/displaycity"

        />



</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:padding="5dp"
        >






<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



    android:layout_alignParentBottom="true"
    android:id="@+id/calldonor"
    android:text="Call Donor"
    android:textColor="@android:color/white"
    android:background="@color/bootstrap_brand_danger"




    />


    </RelativeLayout>
</LinearLayout>
